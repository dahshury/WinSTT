                            f.write(chunk)
                            downloaded += len(chunk)
                            
                            # Emit progress signal if available
                            if hasattr(self, 'download_progress'):
                                progress = int((downloaded / total_size) * 100) if total_size > 0 else 0
                                self.download_progress.emit(model_name, progress)
            
